<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gustavosoares.app_hunting_ti">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Apphuntingti">
        <activity android:name=".AgendaDeEmpresasActivity"></activity>
        <activity
            android:name=".ListaDeTarefasActivity"
            android:label="Lista de Tarefas" />
        <activity
            android:name=".AgendaDeContatosActivity"
            android:label="Agenda De Contados"
            android:parentActivityName=".MenuPrincipalActivity" />
        <activity
            android:name=".ContatosActivity"
            android:label="@string/contatosactivity_name"
            android:parentActivityName=".AgendaDeContatosActivity" />
        <activity
            android:name=".CadastroActivity"
            android:label="@string/cadastro" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuPrincipalActivity"
            android:label="@string/menuactivity_name" />
        <activity
            android:name=".MainActivity"
            android:label="@string/mainactivity_name" />
    </application>

</manifest>